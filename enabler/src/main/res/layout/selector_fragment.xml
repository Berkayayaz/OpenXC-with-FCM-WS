<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EnablerFragment"
    >

    <LinearLayout
        android:orientation="vertical"
        style="@style/ItemRow">


        <Button
            android:id="@+id/check_engine_speed_btn"
            style="@style/MinimalButton"
            android:text="Start Engine Speed Meter"
            android:layout_marginBottom="15px"
            />

    <LinearLayout style="@style/ItemRow" >

        <TextView
            android:id="@+id/event_name_textview"
            style="@style/ItemLabel"
            android:text="Engine Speed:" />

        <TextView
            android:id="@+id/engine_speed_value_text_view_selector"
            style="@style/ItemData" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>